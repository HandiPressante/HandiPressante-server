{% extends 'layout.html.twig' %}

{% block pagetitle %}Reporter un problème{% endblock %}

{% block content %}
	{% if error is defined %}
		<div class="row">
			<div class="col s12 m10 l8">
				<div class="card">
					<div class="card-content red-text">
						<p>
							{{ error }}
						</p>
					</div>
				</div>
			</div>
		</div>
	{% endif %}

	<form class="col s12" method="post" action="{{ path_for('bugtracker_report') }}" enctype="multipart/form-data">

		<div class="row">
			<div class="input-field col s12">
				<input type="text" id="version" name="version" class="validate" {% if data.version is defined %}value="{{ data.version }}"{% endif %} />
				<label for="version">Version :</label>
			</div>
		</div>

		<div class="row">
			<div class="input-field col s12">
				<input type="email" id="email" name="email" class="validate" {% if data.email is defined %}value="{{ data.email }}"{% endif %} />
				<label for="email">Email :</label>
			</div>
		</div>

		<div class="row">
			<div class="input-field col s12">
				<textarea id="observed_issue" name="observed_issue" class="materialize-textarea">{% if data.observed_issue is defined %}{{ data.observed_issue }}{% endif %}</textarea>
				<label for="observed_issue">Problème rencontré :</label>
			</div>
		</div>

		<div class="row">
			<div class="input-field col s12">
				<textarea id="expected_behaviour" name="expected_behaviour" class="materialize-textarea">{% if data.expected_behaviour is defined %}{{ data.expected_behaviour }}{% endif %}</textarea>
				<label for="expected_behaviour">Comportement attendu :</label>
			</div>
		</div>

		<button class="btn waves-effect waves-light right" type="submit" name="report">
			Envoyer
			<i class="material-icons right">bug report</i>
		</button>
	</form>

{% endblock %}