{% extends 'layout.html.twig' %}

{% block pagetitle %}Initialiser le mot de passe{% endblock %}

{% block content %}
	{% if error is defined and error|length > 0 %}
		<div class="row">
			<div class="col s12 m10 l8">
				<div class="card">
					<div class="card-content red-text">
						<p>
							{{ error|raw }}
						</p>
					</div>
				</div>
			</div>
		</div>
	{% endif %}

	{% if printForm %}
		<form class="col s12" method="post" action="{{ path_for('admin_setpassword_post') }}">
			<div class="row">
				<div class="input-field col s6 m3 l6">
					<input type="password" id="password" name="password" class="validate" />
					<label for="password">Mot de passe :</label>
				</div>

				<div class="input-field col s6 m5 l6">
					<input type="password" id="password-confirm" name="passwordConfirm" class="validate" />
					<label for="password-confirm">Confirmer le mot de passe :</label>
				</div>
			</div>

			<input type="hidden" name="id" value="{{ id }}" />
			<input type="hidden" name="token" value="{{ passwordToken }}" />

			<button class="btn waves-effect waves-light" type="submit" name="set">
				Valider
				<i class="material-icons right">done</i>
			</button>
		</form>
	{% endif %}
{% endblock %}