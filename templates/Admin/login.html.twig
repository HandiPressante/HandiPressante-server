{% extends 'layout.html.twig' %}

{% block pagetitle %}Connexion{% endblock %}

{% block content %}
	{% if error is defined and error %}
		<div class="row">
			<div class="col s12 m10 l8">
				<div class="card">
					<div class="card-content red-text">
						<span class="card-title">Erreur de connexion</span>

						<p>
							Adresse e-mail ou mot de passe invalide.<br />
							{{ hash }}
						</p>
					</div>
				</div>
			</div>
		</div>
	{% endif %}

	<div class="row">
		<form class="col s12 m10 l8" method="post" action="{{ path_for('admin_login') }}">
			<div class="row">
				<div class="input-field col s12">
					<input type="email" id="email" name="email" class="validate" />
					<label for="email">Adresse e-mail :</label>
				</div>
			</div>

			<div class="row">
				<div class="input-field col s12">
					<input type="password" id="password" name="password" class="validate" />
					<label for="password">Mot de passe :</label>
				</div>
			</div>

			<button class="btn waves-effect waves-light" type="submit" name="login">
				Se connecter
				<i class="material-icons right">lock_open</i>
			</button>
		</form>
	</div>
{% endblock %}