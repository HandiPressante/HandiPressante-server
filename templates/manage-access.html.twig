{% extends 'layout.html.twig' %}

{% block pagetitle %}Gestion des acc√®s{% endblock %}

{% block content %}
	<div class="row">
		<div class="col s12">
			<div class="card">
				<div class="card-content">
					<span class="card-title">Ajouter un administrateur</span>

					<div class="row">
						{% include 'add-access-form.html.twig' %}
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col s12">
			<ul class="collection with-header">
				<li class="collection-header"><h4>Administrateurs</h4></li>

				{% for a in admins %}
					<li class="collection-item"><div>{{ a.email }}<a href="/admin/remove-access/{{ a.id }}" class="secondary-content"><i class="material-icons red-text">clear</i></a></div></li>
				{% endfor %}
			</ul>
		</div>
	</div>
{% endblock %}