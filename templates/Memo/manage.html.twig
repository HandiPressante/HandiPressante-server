{% extends 'layout.html.twig' %}

{% block pagetitle %}Gestion des mémos médicaux{% endblock %}

{% block content %}
	<div class="row">
		<div class="col s12">
			<div class="card">
				<div class="card-content">
					<span class="card-title">Ajouter un mémo médical</span>

					<div class="row">
						{% include 'Memo/_add-form.html.twig' %}
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col s12">
			<ul class="collection with-header">
				<li class="collection-header"><h4>Mémos medicaux</h4></li>

				{% for m in memo_list %}
					<li class="collection-item"><div>{{ m.title }}<a href="{{ path_for('memo_remove', {'id': m.id}) }}" class="secondary-content"><i class="material-icons red-text">clear</i></a></div></li>
				{% endfor %}
			</ul>
		</div>
	</div>
{% endblock %}