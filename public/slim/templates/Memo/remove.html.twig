{% extends 'layout.html.twig' %}

{% block pagetitle %}Supprimer un mémo médical{% endblock %}

{% block content %}
	<form class="col s12" method="post" action="{{ path_for('memo_remove_confirm') }}">
		<input type="hidden" name="id" value="{{ id }}" />
		<input type="hidden" name="{{ token.nameKey }}" value="{{ token.name }}" />
		<input type="hidden" name="{{ token.valueKey }}" value="{{ token.value }}" />

		<p>
			Vous êtes sur le point de supprimer le mémo médical <strong>{{ title }}</strong>.<br />
			Veuillez confirmer.
		</p>

		<div class="row">
			<div class="input-field col">
				<a href="{{ path_for('memo_manage') }}" class="waves-effect waves-light btn">Annuler</a>
			</div>

			<div class="input-field col">
				<button class="btn red waves-effect waves-light" type="submit" name="remove">
					Supprimer
					<i class="material-icons right">clear</i>
				</button>
			</div>
		</div>
	</form>
{% endblock %}
